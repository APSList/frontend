{
  "openapi": "3.0.1",
  "info": {
    "title": "property-service",
    "version": "1.0"
  },
  "paths": {
    "/property": {
      "get": {
        "tags": [
          "Property"
        ],
        "summary": "Get all properties",
        "parameters": [
          {
            "name": "filter",
            "in": "query",
            "schema": {
              "$ref": "#/components/schemas/PropertyFilter"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Property"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Property"
        ],
        "summary": "Creates a new property with optional images.",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "Name": {
                    "type": "string"
                  },
                  "Description": {
                    "type": "string"
                  },
                  "Adress": {
                    "type": "string"
                  },
                  "Country": {
                    "type": "string"
                  },
                  "PropertyTypeEnum": {
                    "$ref": "#/components/schemas/PropertyTypeEnum"
                  },
                  "MaxGuests": {
                    "type": "integer",
                    "format": "int32"
                  },
                  "Bedrooms": {
                    "type": "integer",
                    "format": "int32"
                  },
                  "Bathrooms": {
                    "type": "integer",
                    "format": "int32"
                  },
                  "PricePerPersonDay": {
                    "type": "number",
                    "format": "double"
                  },
                  "DennyFee": {
                    "type": "number",
                    "format": "double"
                  },
                  "Status": {
                    "$ref": "#/components/schemas/PropertyStatusEnum"
                  },
                  "Images": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "format": "binary"
                    }
                  },
                  "Amenities": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/AmenityTypeEnum"
                    }
                  }
                }
              },
              "encoding": {
                "Name": {
                  "style": "form"
                },
                "Description": {
                  "style": "form"
                },
                "Adress": {
                  "style": "form"
                },
                "Country": {
                  "style": "form"
                },
                "PropertyTypeEnum": {
                  "style": "form"
                },
                "MaxGuests": {
                  "style": "form"
                },
                "Bedrooms": {
                  "style": "form"
                },
                "Bathrooms": {
                  "style": "form"
                },
                "PricePerPersonDay": {
                  "style": "form"
                },
                "DennyFee": {
                  "style": "form"
                },
                "Status": {
                  "style": "form"
                },
                "Images": {
                  "style": "form"
                },
                "Amenities": {
                  "style": "form"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "integer",
                  "format": "int32"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/property/{id}": {
      "get": {
        "tags": [
          "Property"
        ],
        "summary": "Retrieves the property matching the specified ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Property"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": [
          "Property"
        ],
        "summary": "Updates the property matching the specified ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PropertyCreateRequestDTO"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "integer",
                  "format": "int32"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Property"
        ],
        "summary": "Deletes the property matching the specified ID and all its images.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    }
  },
